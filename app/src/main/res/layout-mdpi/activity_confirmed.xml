<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.allin.enq.activity.ConfirmedActivity"
    android:padding="0dp">

    <include layout="@layout/toolbar" android:id="@+id/confirmed_activity_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caja"
        android:id="@+id/confirmed_paydesk_number_label"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/confirmed_activity_toolbar"
        android:layout_alignLeft="@+id/confirmed_close_button"
        android:layout_alignStart="@+id/confirmed_close_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/confirmed_paydesk_number_text_view"
        android:textColor="@color/quiet_green"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/confirmed_paydesk_number_label"
        android:layout_alignBottom="@+id/confirmed_paydesk_number_label"
        android:layout_toRightOf="@+id/confirmed_client_number_label"
        android:layout_alignRight="@+id/confirmed_close_button"
        android:layout_alignEnd="@+id/confirmed_close_button"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NÃºmero de cliente"
        android:textSize="20sp"
        android:id="@+id/confirmed_client_number_label"
        android:layout_alignBaseline="@+id/confirmed_client_number_text_view"
        android:layout_alignBottom="@+id/confirmed_client_number_text_view"
        android:layout_alignLeft="@+id/confirmed_paydesk_number_label"
        android:layout_alignStart="@+id/confirmed_paydesk_number_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="30dp"
        android:textColor="@color/quiet_green"
        android:id="@+id/confirmed_client_number_text_view"
        android:layout_below="@+id/confirmed_paydesk_number_text_view"
        android:layout_alignLeft="@+id/confirmed_paydesk_number_text_view"
        android:layout_alignStart="@+id/confirmed_paydesk_number_text_view"
        android:layout_alignRight="@+id/confirmed_close_button"
        android:layout_alignEnd="@+id/confirmed_close_button"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERRAR"
        android:id="@+id/confirmed_close_button"
        android:background="@drawable/green_button_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/confirmed_activity_toolbar"
        android:layout_alignStart="@+id/confirmed_activity_toolbar"
        android:layout_alignRight="@+id/confirmed_activity_toolbar"
        android:layout_alignEnd="@+id/confirmed_activity_toolbar"
        android:layout_margin="10dp" />

</RelativeLayout>
