<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.santi.enq.WaitingActivity"
    android:padding="0dp"
    android:nestedScrollingEnabled="false">

    <include layout="@layout/toolbar" android:id="@+id/waiting_activity_toolbar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar grupo"
        android:id="@+id/change_group_button"
        android:layout_above="@+id/cancel_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/estimated_text_view"
        android:layout_toStartOf="@+id/estimated_text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas tiempo"
        android:id="@+id/more_time_button"
        android:layout_alignTop="@+id/change_group_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/change_group_button"
        android:layout_toEndOf="@+id/change_group_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/estimated_text_view"
        android:layout_alignTop="@+id/estimated_label"
        android:layout_alignRight="@+id/number_text_view"
        android:layout_alignEnd="@+id/number_text_view"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/number_text_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="@color/quiet_green"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/more_time_button"
        android:layout_alignEnd="@+id/more_time_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tiempo de espera"
        android:id="@+id/estimated_label"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/waiting_activity_toolbar"
        android:layout_toLeftOf="@+id/estimated_text_view"
        android:layout_toStartOf="@+id/estimated_text_view"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NÃºmero de cliente"
        android:id="@+id/textView"
        android:layout_above="@+id/number_text_view"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
