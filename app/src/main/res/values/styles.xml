<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@style/Theme.AppCompat.Light" >
        <item name="statusBarColor">@color/primary_dark_blue</item>
        <item name="navigationBarColor">@color/primary_dark_blue</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyTheme.MyButton">
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/MyActionBar.Title</item>
        <item name="android:background">@color/primary_blue</item>
    </style>

    <style name="MyActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>