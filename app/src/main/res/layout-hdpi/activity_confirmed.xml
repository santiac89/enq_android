<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.allin.enq.activity.ConfirmedActivity"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caja"
        android:id="@+id/confirmed_paydesk_number_label"
        android:textSize="20dp"
        android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/confirmed_paydesk_number_text_view"
        android:textColor="@color/primary_blue"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirmed_paydesk_number_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NÃºmero de cliente"
        android:textSize="20dp"
        android:id="@+id/confirmed_client_number_label"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirmed_paydesk_number_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="60sp"
        android:textColor="@color/primary_blue"
        android:id="@+id/confirmed_client_number_text_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirmed_client_number_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERRAR"
        android:id="@+id/confirmed_close_button"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/remaining_time_text_view"
        android:textSize="45sp"
        android:textColor="@color/primary_blue"
        android:textIsSelectable="false"
        android:layout_below="@id/remaining_time_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Acerquese a caja antes de"
        android:id="@+id/remaining_time_label"
        android:layout_below="@id/confirmed_client_number_text_view"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

</RelativeLayout>
