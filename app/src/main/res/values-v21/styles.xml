<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme.Material.Light" >
        <item name="android:statusBarColor">@color/primary_dark_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark_blue</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyTheme.MyButton">
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBar.Title</item>
        <item name="android:background">@color/primary_blue</item>
    </style>

    <style name="MyActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>